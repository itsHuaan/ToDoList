@model IEnumerable<ToDoList.Models.Task>

@{
    ViewBag.Title = "Task List";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Tasks List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsCompleted)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>
                            <select class="action-dropdown btn btn-default" data-id="@item.Id">
                                <option value="">Select an action</option>
                                <option value="@Url.Action("Edit", new { id = item.Id })">Edit</option>
                                <option value="@Url.Action("Details", new { id = item.Id })">Details</option>
                                <option value="@Url.Action("Delete", new { id = item.Id })">Delete</option>
                            </select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a class="btn btn-primary" href="@Url.Action("Create")">Create New Task</a>

@Html.Partial("_Modals")
<script src="~/Scripts/modals.js"></script>
